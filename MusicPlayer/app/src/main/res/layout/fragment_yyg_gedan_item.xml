            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:textColor="#fff"
            android:textSize="12sp"
            android:text="234ä¸‡"
            />
