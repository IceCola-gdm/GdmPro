<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#D33B30">
    <ImageView
        android:id="@+id/img_phone_register_back"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:src="@drawable/arrow_left"
        android:onClick="registerClick"
        android:clickable="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="账号注册"
        android:textColor="#fff"
        android:textSize="20sp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/img_phone_register_back"
        />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="50dp">
        <ImageView
            android:id="@+id/img_phone_register_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/a36"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"/>
        <EditText
            android:id="@+id/ed_phone_register_number"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
           android:layout_toRightOf="@+id/img_phone_register_icon"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:hint="请输入账号"
            android:textColorHint="#C0C4C3"
            android:inputType="number"
            android:background="@null" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_alignParentBottom="true"
            android:background="#C0C4C3"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp">
        <ImageView
            android:id="@+id/img_register_pwd_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/a38"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"/>
        <EditText
            android:id="@+id/ed_phone_register_pwd"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img_register_pwd_icon"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:hint="请设置密码，不少于6位"
            android:textColorHint="#C0C4C3"
            android:inputType="textPassword"
            android:background="@null"
            android:maxLength="11"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_alignParentBottom="true"
            android:background="#C0C4C3"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp">
        <ImageView
            android:id="@+id/img_register_yanzheng_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/a34"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"/>
        <EditText
            android:id="@+id/ed_phone_register_yanzheng"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img_register_yanzheng_icon"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:hint="请再次输入密码"
            android:textColorHint="#C0C4C3"
            android:inputType="textPassword"
            android:background="@null"
            android:maxLength="11"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_alignParentBottom="true"
            android:background="#C0C4C3"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />
    </RelativeLayout>
    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:text="下一步"
        android:textColor="#fff"
        android:background="#D33B30"/>
</LinearLayout>
