<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/a2u"
    android:gravity="center_horizontal">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/a7b"
        android:layout_marginTop="100dp"/>
    <Button
        android:id="@+id/btn_phone_login"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        android:background="#D03939"
        android:text="手机号登录"
        android:textColor="#fff"/>
    <Button
        android:id="@+id/btn_register"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="#D03939"
        android:text="注册"
        android:textColor="#fff"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/shiyong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="游客试用"
            android:layout_centerVertical="true"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="15dp"
            android:layout_toRightOf="@+id/shiyong"
            android:layout_marginLeft="5dp"
            android:src="@drawable/a30"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="其他登录方式"
        android:textColor="#3D3D3D"
        android:layout_marginTop="60dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp">
            <ImageView
                android:id="@+id/img_login_weixin_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/a3m"
                android:layout_marginLeft="20dp"/>
            <ImageView
                android:id="@+id/img_login_qq_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/a3i"
                android:layout_marginLeft="20dp"/>
            <ImageView
                android:id="@+id/img_login_weibo_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/a3k"
                android:layout_marginLeft="20dp"/>
            <ImageView
                android:id="@+id/img_login_wangyi_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/a3f"
                android:layout_marginLeft="20dp"/>
    </LinearLayout>

</LinearLayout>
