        <!--android:id="@+id/gv_star"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="500dp"-->
        <!--android:verticalSpacing="2dp"-->
        <!--android:horizontalSpacing="2dp"-->
        <!--android:numColumns="3" />-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:padding="1dp"
                    android:layout_weight="1">
                    <FrameLayout
                        android:id="@+id/fl_ys1"
                        android:layout_width="match_parent"
                        android:layout_height="160dp">
                        <ImageView
                            android:id="@+id/img_gft_ys1"
                            android:layout_width="match_parent"
                            android:layout_height="160dp"
                            android:src="@drawable/g4"
                            android:scaleType="fitXY"
                            android:layout_centerHorizontal="true"/>
                        <ImageView
                            android:id="@+id/img_red_ys1"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="bottom|right"
                            android:src="@drawable/used"
                            android:layout_margin="10dp"
                            android:visibility="invisible"/>
                    </FrameLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="smkldc"
                        android:layout_below="@+id/fl_ys1"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:padding="1dp"
                    android:layout_weight="1">
                    <FrameLayout
                        android:id="@+id/fl_ys2"
                        android:layout_width="match_parent"
                        android:layout_height="160dp">
                        <ImageView
                            android:id="@+id/img_gft_ys2"
                            android:layout_width="match_parent"
                            android:layout_height="160dp"
                            android:src="@drawable/g9"
                            android:scaleType="fitXY"
                            android:layout_centerHorizontal="true"/>
                        <ImageView
                            android:id="@+id/img_white_ys2"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="bottom|right"
                            android:src="@drawable/ae4"
                            android:layout_margin="10dp"
                            android:visibility="invisible"/>
                    </FrameLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="何以笙箫默"
                        android:layout_below="@+id/fl_ys2"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:padding="1dp"
                    android:layout_weight="1">
                    <FrameLayout
                        android:id="@+id/fl_ys3"
                        android:layout_width="match_parent"
                        android:layout_height="160dp">
                        <ImageView
                            android:id="@+id/img_gft_ys3"
                            android:layout_width="match_parent"
                            android:layout_height="160dp"
                            android:src="@drawable/g7"
                            android:scaleType="fitXY"
                            android:layout_centerHorizontal="true"/>
                        <ImageView
                            android:id="@+id/img_auto_ys3"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="bottom|right"
                            android:src="@drawable/used"
                            android:layout_margin="10dp"
                            android:visibility="invisible"/>
                    </FrameLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="wed"
                        android:layout_below="@+id/fl_ys3"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
