<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#D33B30">
        <ImageView
            android:id="@+id/img_search_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:src="@drawable/arrow_left"
            android:clickable="true"
            android:onClick="searchClick"/>
        <EditText
            android:id="@+id/ed_search"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:hint="搜索音乐"
            android:textColorHint="#EFF3F2"
            android:textColor="#fff"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_search_back"
            />
        <ImageView
            android:id="@+id/search"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_toRightOf="@+id/ed_search"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:src="@drawable/search"
            android:clickable="true"/>
    </RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:id="@+id/ll_in"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="invisible"
            android:background="#EFF3F2">
            <RelativeLayout
                android:id="@+id/rl_all3"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#EFF3F2"
                android:clickable="true">
                <ImageView
                    android:id="@+id/img_search_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="10dp"
                    android:scaleType="fitXY"
                    android:layout_centerVertical="true"
                    android:src="@drawable/danqu_icon"
                    android:clickable="true"/>
                <TextView
                    android:id="@+id/tv_bofang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="播放全部"
                    android:textColor="#3D3D3D"
                    android:layout_toRightOf="@+id/img_search_icon"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/tv_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="共（0）首"
                    android:textSize="12sp"
                    android:textColor="#A5A9A8"
                    android:layout_margin="10dp"
                    android:layout_toRightOf="@+id/tv_bofang"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <ListView
                android:id="@+id/search_listview"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#EFF3F2"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_out"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="热门搜索"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"/>
            <com.gdm.musicplayer.view.MyFlowLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv1"
                    android:clickable="true"
                    android:onClick="flowClick"
                    style="@style/text_flow"
                    android:text="Send My Love"/>
                <TextView
                    android:id="@+id/tv2"
                    android:clickable="true"
                    android:onClick="flowClick"
                    style="@style/text_flow"
                    android:text="Hello"/>
                <TextView
                    android:id="@+id/tv3"
                    android:clickable="true"
                    android:onClick="flowClick"
                    style="@style/text_flow"
                    android:text="最后一次"/>
                <TextView
                    android:id="@+id/tv4"
                    android:clickable="true"
                    android:onClick="flowClick"
                    style="@style/text_flow"
                    android:text="大声说爱你"/>
                <TextView
                    android:id="@+id/tv5"
                    android:clickable="true"
                    android:onClick="flowClick"
                    style="@style/text_flow"
                    android:text="Need You Now"/>
                <TextView
                    android:id="@+id/tv6"
                    android:clickable="true"
                    android:onClick="flowClick"
                    style="@style/text_flow"
                    android:text="再见只是陌生人"/>
                <TextView
                    android:id="@+id/tv7"
                    android:clickable="true"
                    android:onClick="flowClick"
                    style="@style/text_flow"
                    android:text="I Found a boy"/>
                <TextView
                    android:id="@+id/tv8"
                    android:clickable="true"
                    android:onClick="flowClick"
                    style="@style/text_flow"
                    android:text="蒲公英的脚印"/>
            </com.gdm.musicplayer.view.MyFlowLayout>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/rl_fail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible">
            <ImageView
                android:id="@+id/img_nothing"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/a6t"
                android:layout_marginTop="100dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_nothing"
                android:layout_marginTop="30dp"
                android:text="程序员偷懒，没有录入这首歌哟"
                android:textColor="#939393"
                android:textSize="15sp"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </FrameLayout>
</LinearLayout>
