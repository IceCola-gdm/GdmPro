<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#D33B30">
    <ImageView
        android:id="@+id/img_recentlyplay_back"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:src="@drawable/arrow_left"
        android:clickable="true"
        android:onClick="recentlyplayClick"/>
    <TextView
        android:id="@+id/tv_recentlyplay_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="最近播放"
        android:textColor="#fff"
        android:textSize="20sp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/img_recentlyplay_back"
        />
    <TextView
        android:id="@+id/tv_recentlyplay_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:text="清空"
        android:textColor="#fff"
        android:textSize="18sp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#EFF3F2">
        <ImageView
            android:id="@+id/img_recentlyplay_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:src="@drawable/danqu_icon"/>
        <TextView
            android:id="@+id/tv_recentlyplay_bofang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="播放全部"
            android:textColor="#3D3D3D"
            android:layout_toRightOf="@+id/img_recentlyplay_icon"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_recently_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="共（0）首"
            android:textSize="12sp"
            android:textColor="#A5A9A8"
            android:layout_margin="10dp"
            android:layout_toRightOf="@+id/tv_recentlyplay_bofang"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <ListView
        android:id="@+id/recentlyplay_listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#EFF3F2"/>

</LinearLayout>
