<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:orientation="horizontal"
    android:background="#000">
    <ImageView
        android:id="@+id/img_fore_portrait"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_gravity="center_vertical"
        android:layout_margin="10dp"
        android:src="@mipmap/ic_launcher"/>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center_vertical">
        <TextView
            android:id="@+id/tv_fore_songname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="按键电脑卡山地车那些卡"
            android:textColor="#fff"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/tv_fore_singer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="按键电"
            android:textColor="#939393"
            android:textSize="12sp"
            android:layout_below="@+id/tv_fore_songname"
            android:layout_marginTop="10dp"
            />
        <RelativeLayout
            android:id="@+id/rl_line"
            android:layout_below="@+id/tv_fore_singer"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginTop="10dp"
            android:background="#3D3D3D"/>
        <LinearLayout
            android:layout_below="@+id/rl_line"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_fore_last"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/a9f"
                />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/a9b"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/a9_"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
