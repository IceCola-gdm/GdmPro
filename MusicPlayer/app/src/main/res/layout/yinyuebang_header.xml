<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="#3EB5BB">
    <ImageView
        android:id="@+id/img_bangdan_back"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/arrow_left"
        android:layout_margin="10dp"/>
    <TextView
        android:id="@+id/tv_bangdan_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textColor="#fff"
        android:text="飙升榜"
        android:textSize="50sp"
        android:layout_margin="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="40dp">
            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="match_parent">
            <ImageView
                android:id="@+id/img_bangdan_collection"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/yn" />
            <TextView
                android:id="@+id/tv_bangdan_collect_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="678120"
                android:textColor="#fff"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/img_bangdan_collection"/>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="match_parent">
            <ImageView
                android:id="@+id/img_bangdan_like"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/agh"/>
            <TextView
                android:id="@+id/tv_bangdan_like_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="678120"
                android:textColor="#fff"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/img_bangdan_like"/>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="match_parent">
            <ImageView
                android:id="@+id/img_bangdan_share"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ys"/>
            <TextView
                android:id="@+id/tv_bangdan_share_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="678120"
                android:textColor="#fff"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/img_bangdan_share"/>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="match_parent">
            <ImageView
                android:id="@+id/img_bangdan_down"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ym"/>
            <TextView
                android:id="@+id/tv_bangdan_down_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="678120"
                android:textColor="#fff"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/img_bangdan_down"/>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#EFF3F2">
        <ImageView
            android:id="@+id/img_bangdan_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:src="@drawable/danqu_icon"/>
        <TextView
            android:id="@+id/tv_bangdan_bofang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="播放全部"
            android:textColor="#3D3D3D"
            android:layout_toRightOf="@+id/img_bangdan_icon"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_bangdan_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="共（0）首"
            android:textSize="12sp"
            android:textColor="#A5A9A8"
            android:layout_margin="10dp"
            android:layout_toRightOf="@+id/tv_bangdan_bofang"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</LinearLayout>
