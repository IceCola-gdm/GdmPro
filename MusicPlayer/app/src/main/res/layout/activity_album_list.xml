<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#D33B30">
        <ImageView
            android:id="@+id/img_albumname_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:src="@drawable/arrow_left"
            android:clickable="true"
            android:onClick="albumClick"/>
        <TextView
            android:id="@+id/tv_albumname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:textColor="#fff"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_albumname_back"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_all2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#fff"
        android:clickable="true"
        android:onClick="albumClick">
        <ImageView
            android:id="@+id/img_albumname_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="10dp"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:src="@drawable/danqu_icon"
            android:clickable="true"/>
        <TextView
            android:id="@+id/tv_bofang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="播放全部"
            android:textColor="#3D3D3D"
            android:layout_toRightOf="@+id/img_albumname_icon"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="共（0）首"
            android:textSize="12sp"
            android:textColor="#A5A9A8"
            android:layout_margin="10dp"
            android:layout_toRightOf="@+id/tv_bofang"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <ListView
        android:id="@+id/album_list_listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#EFF3F2"
        android:clickable="true"/>

</LinearLayout>
