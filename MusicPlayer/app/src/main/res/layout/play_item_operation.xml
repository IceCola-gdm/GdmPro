<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/tv_n"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="歌曲:"
            android:layout_margin="10dp"
            android:textColor="#939393"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_sn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#939393"
            android:layout_toRightOf="@+id/tv_n"
            android:layout_centerVertical="true"
            android:text="cnjkdhksjskc"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_add"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:clickable="true">
        <ImageView
            android:id="@+id/add"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/a00"
            android:layout_margin="10dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收藏到歌单"
            android:layout_toRightOf="@+id/add"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/singer"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/w0"
            android:layout_margin="10dp"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="歌手："
            android:layout_toRightOf="@+id/singer"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/t_singer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sdscs"
            android:layout_toRightOf="@+id/t"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/album"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/vy"
            android:scaleType="fitXY"
            android:layout_margin="10dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_album"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="专辑："
            android:layout_toRightOf="@+id/album"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/t_album"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sdscs"
            android:layout_toRightOf="@+id/tv_album"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_mv"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:clickable="true">
        <ImageView
            android:id="@+id/mv"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:scaleType="fitXY"
            android:src="@drawable/we"
            android:layout_margin="10dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_mv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看MV"
            android:layout_toRightOf="@+id/mv"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_down"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:clickable="true">
        <ImageView
            android:id="@+id/down"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:scaleType="fitXY"
            android:src="@drawable/dow"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下载到本地"
            android:layout_toRightOf="@+id/down"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"/>
    </RelativeLayout>
</LinearLayout>
