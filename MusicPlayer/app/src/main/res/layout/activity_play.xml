<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#121214">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageView
            android:id="@+id/img_play_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/arrow_left"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:clickable="true"
            android:onClick="playClick2"/>
        <RelativeLayout
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/img_play_back"
            android:layout_margin="10dp">
            <TextView
                android:id="@+id/tv_play_song_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hgsihxuiashui"
                android:textColor="#fff"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/tv_play_song_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hgsihxuiashui"
                android:textColor="#939393"
                android:textSize="14sp"
                android:layout_below="@+id/tv_play_song_name"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/img_play_share"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:src="@drawable/ys"
            android:clickable="true"
            android:onClick="playClick2"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:orientation="horizontal"
        android:background="#3D3D3D"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_play"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal">
        <TextView
            android:id="@+id/tv_currenttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:text="03:03"
            android:textColor="#fff"
            android:textSize="12sp"/>
        <SeekBar
            android:id="@+id/seekbar"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_currenttime"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_totaltime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:text="03:03"
            android:textColor="#fff"
            android:textSize="12sp"
            android:layout_toRightOf="@+id/seekbar"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_centerVertical="true">
            <ImageView
                android:id="@+id/img_play_type"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:src="@drawable/a_h"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:onClick="playClick"/>
            <ImageView
                android:id="@+id/img_play_last"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:src="@drawable/agb"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:onClick="playClick"/>
            <ImageView
                android:id="@+id/img_play_play"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:src="@drawable/a_5"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:onClick="playClick"/>
            <ImageView
                android:id="@+id/img_play_next"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:src="@drawable/a_1"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:onClick="playClick"/>
            <ImageView
                android:id="@+id/img_play_menu"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:src="@drawable/menu"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:onClick="playClick2"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
