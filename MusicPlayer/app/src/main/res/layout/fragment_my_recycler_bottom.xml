<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="#E4E8E7">
    <ImageView
        android:id="@+id/img_content_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/a90"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"/>
    <RelativeLayout
        android:layout_toRightOf="@+id/img_content_icon"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_centerVertical="true">
        <TextView
            android:id="@+id/tv_bottom_gedanname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我喜欢的音乐"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/tv_bottom_yinyuecount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0首"
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/tv_bottom_gedanname"
            />
    </RelativeLayout>
    <ImageView
        android:id="@+id/img_gedanbianji"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:src="@drawable/edit"/>

</RelativeLayout>
