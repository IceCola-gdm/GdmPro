<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">
        <ImageView
            android:id="@+id/img_personalinfo_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/afc"
            android:clickable="true"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#0f999999">
            <ImageView
                android:id="@+id/img_personalinfo_back"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="10dp"
                android:src="@drawable/arrow_left"
                android:clickable="true"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <com.gdm.musicplayer.view.CircleImageView
                    android:id="@+id/img_personalinfo_portrait"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/me"/>
                <RelativeLayout
                    android:id="@+id/rl_personalinfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:id="@+id/tv_personalinfo_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="hahahhah"
                        android:textColor="#fff"/>
                    <ImageView
                        android:id="@+id/img_personalinfo_sex"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_toRightOf="@+id/tv_personalinfo_username"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/ab2"/>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:background="@drawable/a1n"
                    android:layout_marginTop="10dp">
                    <ImageView
                        android:id="@+id/img_personal_edit_icon"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/write"
                        android:layout_marginLeft="15dp"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:id="@+id/tv_personalinfo_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我的资料"
                        android:padding="4dp"
                        android:textColor="#fff"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/img_personal_edit_icon"
                        android:clickable="true"
                    />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>
    <android.support.design.widget.TabLayout
        android:id="@+id/personal_tablelayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:tabIndicatorColor="@android:color/holo_red_dark"
        app:tabSelectedTextColor="@android:color/holo_red_dark"
        app:tabTextColor="@android:color/black"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/personal_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>
